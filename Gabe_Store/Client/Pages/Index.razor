@page "/"
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>GayBE</PageTitle>

<MudDrawer @bind-Open="@open" Elevation="1" ClipMode="@DrawerClipMode.Docked">

    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Фильтры</MudText>
    </MudDrawerHeader>
    
    <MudTextField T="string"></MudTextField>

</MudDrawer>

<MudContainer>

    <h1>Hello, world!</h1>

    Welcome to your new app.

    <MudButton OnClick="Bebra">Bebra</MudButton>
    <MudText>@showresult</MudText>
</MudContainer>


@code {
    string showresult = "empty";

    async void Bebra()
    {
        var result = await Http.GetAsync("api/Goods/get_all");
        showresult = result.StatusCode.ToString();
        StateHasChanged();
    }

    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}